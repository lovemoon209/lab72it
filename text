#include <gtest/gtest.h>
#include "Matrixm2it.h"
#include <iostream>
using namespace std;

TEST(MatrixTest, SwapMinMaxInRows) {
    int matrix[2][3] = {{1, 9, 3}, {4, -1, 2}};
    int* ptrs[2] = {matrix[0], matrix[1]};
    SwapMinMaxInRows(ptrs, 2, 3);

    EXPECT_EQ(matrix[0][0], 9);
    EXPECT_EQ(matrix[0][1], 1);
    EXPECT_EQ(matrix[1][0], -1);
    EXPECT_EQ(matrix[1][1], 4);
}

TEST(MatrixTest, SearchMinEven) {
    int matrix[3][3] = {{1, 3, 4}, {5, 2, 7}, {8, 9, 6}};
    int* ptrs[3] = {matrix[0], matrix[1], matrix[2]};
    int k, minEven;
    bool found = SearchMinEven(ptrs, 3, k, minEven);

    EXPECT_TRUE(found);
    EXPECT_EQ(k, 0);
    EXPECT_EQ(minEven, 4);
}

TEST(MatrixTest, FindMinMaxIndices) {
    int row[4] = {2, 8, -1, 5};
    int minIndex, maxIndex;
    FindMinMaxIndices(row, 4, minIndex, maxIndex);

    EXPECT_EQ(minIndex, 2);
    EXPECT_EQ(maxIndex, 1);
}

